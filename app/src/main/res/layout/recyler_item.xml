<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginStart="12sp"
    android:layout_marginEnd="12sp"
    android:layout_marginHorizontal="10sp"
    android:layout_marginVertical="10sp"
    app:cardCornerRadius="20sp"
    app:cardElevation="8sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:id="@+id/recImage"
            android:layout_marginStart="20sp"
            android:padding="8sp"
            android:scaleType="centerCrop"
            android:src="@drawable/uploading"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            />
        <TextView
            android:layout_width="120sp"
            android:layout_height="30sp"
            android:id="@+id/recDate"
            android:text="Date"
            android:textSize="20sp"
            android:layout_toEndOf="@+id/recImage"
            android:layout_marginTop="20sp"
            android:layout_marginStart="20sp"/>

        <TextView
            android:layout_width="80sp"
            android:layout_height="30sp"
            android:id="@+id/recRating"
            android:text="Rating"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_toEndOf="@+id/recDate"
            android:layout_marginTop="20sp"
            android:layout_marginStart="90sp"/>

        <TextView
            android:layout_width="140sp"
            android:layout_height="12sp"
            android:id="@+id/recNotes"
            android:text="Notes"
            android:textSize="8sp"
            android:layout_toEndOf="@+id/recImage"
            android:layout_below="@id/recDate"
            android:maxLines="0"
            android:layout_marginStart="20sp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>